.list-container {
  display: flex;
  flex-direction: column;
  /* margin-top: 20rpx; */
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom:1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}
.authorInfo {
  margin: 10rpx auto 20rpx 10rpx;
}
.authorInfo .avatar {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.authorInfo .date {
  margin-left: 20rpx;
  vertical-align: middle;
  font-size: 26rpx;
  margin-bottom: 5px;
}
.list-container .title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10px;
  margin-left: 10px;
}
.list-container .post {
  /* margin-left:16px; */
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}
.list-container .content {
  color: #666;
  font-size: 28rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.post-like {
  display: flex;
  flex-direction: row;
  font-size: 13px;
  line-height: 16px;
  margin-left: 10px;
}
.post-like .like-icon {
  width: 16px;
  height:16px;
  margin-right: 8px;
  vertical-align: middle;
}
.post-like .like-text {
  vertical-align: middle;
}