<view class="wrapper">
  <image class="postImg" src="{{postDetail.post_img}}"></image>
  <image class="audio" catchtap="onMusicTap" src="{{musicTag?'/images/music/music-stop.png':'/images/music/music-start.png'}}"></image>
  <view class="authorInfo">
    <image class="avatar" src="{{postDetail.author_img}}"></image>
    <text class="name">{{postDetail.authorName}}</text>
    <text class="publish">发表于</text>
    <text class="date">{{postDetail.publishDate}}前</text>
  </view>
  <text class="title">{{postDetail.title}}</text>
  <view class="action">
    <view class="line"></view>
    <view class="btn">
      <image wx:if="{{collectTag}}" catchtap="onCollectTap" src="/images/icon/collection.png"></image>
      <image wx:else  catchtap="onCollectTap" src="/images/icon/collection-anti.png"></image>
      <image class="shareImg"  catchtap="onShareTap" src="/images/icon/share.png"></image>
    </view>
  </view>
  <text class="content">{{postDetail.detail}}</text>
</view>